@model IEnumerable<UrbanMediMarts.Models.Product>



@{
    ViewBag.Title = "Index";
}



<h2>Products</h2>




<div class="container">



    @foreach (var item in Model)
    {
        <div class="flex-container" style="background-color:seashell;margin:40px; width: 25rem; float:left; height:33rem;border:1px solid #004d40">

            <div class="card">
                <img class="center-block" src="@Html.DisplayFor(modelItem => item.PImage)" height="200" width="200" ) />



                <div class="card-body text-center">
                    @Html.DisplayFor(modelItem => item.MedicineName)<br />



                    Price: &#8377;@Html.DisplayFor(modelItem => item.Price)<br />



                    Category: @Html.DisplayFor(modelItem => item.Category.CategoryName)




                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>



    }
</div>